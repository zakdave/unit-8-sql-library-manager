extends layout

block content
    div.form-page
        h1 Update Book
        form(action=`/books/${book.id}`, method="post")
            p
                label(for='title') Title
                input#title(name='title' type='text' value=`${book.title}`).form-offset
            p
                label(for='author') Author
                input#author(name='author' type='text' value=`${book.author}`).form-offset
            p
                label(for='genre') Genre
                input#genre(name='genre' type='text' value=`${book.genre}`).form-offset
            p
                label(for='year') Year
                input#year(name='year' type='text' value=`${book.year}`).form-offset
            
            p
                input(type='submit' value='Update Book')

        form(method='post' action=`/books/${book.id}/delete` onsubmit="return confirm('Do you really want to delete this book?');")
            p
                a.button(href='/books') Cancel
            p
                input(type='submit' value='Delete Book')