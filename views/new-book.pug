extends layout
block content

    div.form-page
        h1 New Book
        if(errors)
            h2.error Please fill out required fields to continue...
            ul.error
                each error in errors
                    li=error.message

        form(action="/books/new", method="post")
            p
                label(for='title') Title
                input#title(name='title' type='text' value=`${book.title}`).form-offset
            p
                label(for='author') Author
                input#author(name='author' type='text' value=`${book.author}`).form-offset
            p
                label(for='genre') Genre
                input#genre(name='genre' type='text' value=`${book.genre}`).form-offset
            p
                label(for='year') Year
                input#year(name='year' type='text' value=`${book.year}`).form-offset 

            div.form-offset
                p
                    input(type='submit' value='Create New Book')
                p
                    a.button(href='/books') Cancel